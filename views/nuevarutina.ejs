<!-- CONTENIDO -->
<main class="container my-5">
    <div class="row g-5">

        <!-- COLUMNA IZQUIERDA -->
        <div class="col-lg-4">

            <label class="form-label sketch-label">Músculo</label>
            <select class="form-select sketch-border" id="select-musculo-filtro">
                <option value="todos" selected>Todos los músculos</option>
                <option value="pecho">Pecho</option>
                <option value="espalda">Espalda</option>
                <option value="piernas">Piernas</option>
                <option value="brazos">Brazos</option>
                <option value="hombros">Hombros</option>
                <option value="gluteos">Glúteos</option>
                <option value="abdomen">Abdomen</option>
            </select>

            <div class="lista-ejercicios-seleccion sketch-border mt-3" id="contenedor-ejercicios-disponibles">
                <p class="text-center text-muted">Cargando ejercicios...</p>
            </div>
        </div>

        <!-- COLUMNA DERECHA -->
        <div class="col-lg-8">
            <div class="mb-4">
                <label class="form-label sketch-label-large">Nombre de la rutina</label>
                <input type="text" id="input-nombre-rutina" class="form-control sketch-input" placeholder="Ej: Rutina Pecho Lunes">
            </div>

            <div class="table-responsive sketch-border mb-4">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Ejercicio</th>
                            <th>Reps</th>
                            <th>Grupo</th>
                            <th>Series</th>
                        </tr>
                    </thead>
                    <tbody id="tabla-nueva-rutina-body"></tbody>
                </table>
            </div>

            <button class="btn sketch-border btn-crear" id="btn-crear-rutina">+ Crear Rutina</button>
        </div>
    </div>
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="/static/js/navbar.js"></script>

<!-- JS BD CORREGIDO -->
<script>
    const selectMusculo = document.getElementById("select-musculo-filtro");
    const contenedor = document.getElementById("contenedor-ejercicios-disponibles");

    const mapping = {
        pecho: 1,
        espalda: 2,
        piernas: 3,
        brazos: 4,
        hombros: 5,
        gluteos: 6,
        abdomen: 7
    };

    cargarEjercicios();

    selectMusculo.addEventListener("change", () => {
        let categoria = selectMusculo.value === "todos" ? "todos" : mapping[selectMusculo.value];
        cargarEjercicios(categoria);
    });

    function cargarEjercicios(cat = "todos") {
        contenedor.innerHTML = `<p class="text-center text-muted">Cargando ejercicios...</p>`;

        fetch(`/api/ejercicios?categoria=${cat}`)
            .then(r => r.json())
            .then(data => {
                contenedor.innerHTML = "";

                if (data.length === 0) {
                    contenedor.innerHTML = `<p class="text-center text-muted">No hay ejercicios.</p>`;
                    return;
                }

                data.forEach(ej => {
                    contenedor.innerHTML += `
                        <div class="opcion-ejercicio">
                            <input type="checkbox" value="${ej.id_ejercicio}">
                            <label>${ej.nombre}</label>
                        </div>
                    `;
                });
            })
            .catch(() => {
                contenedor.innerHTML = `<p class="text-center text-danger">Error cargando ejercicios.</p>`;
            });
    }
</script>

